table_create \
  --name NamesFullTextSearchIndex \
  --flags TABLE_PAT_KEY \
  --key_type ShortText \
  --default_tokenizer TokenBigramSplitSymbolAlphaDigit \
  --normalizer NormalizerAuto
table_create \
  --name NamesIndex \
  --flags TABLE_PAT_KEY \
  --key_type ShortText

table_create \
  --name Users \
  --flags TABLE_HASH_KEY \
  --key_type UInt32
column_create \
  --table Users \
  --name name \
  --flags COLUMN_SCALAR \
  --type ShortText

load --table Users
[
["_key", "name"],
[1, "Alice"],
[2, "Bob"]
]

column_create \
  --table NamesFullTextSearchIndex \
  --name index \
  --flags COLUMN_INDEX|WITH_POSITION \
  --type Users \
  --source name
column_create \
  --table NamesIndex \
  --name index \
  --flags COLUMN_INDEX \
  --type Users \
  --source name

log_level --level info
#@add-important-log-levels info
select --table Users --query 'name:^"Ali"'
#@remove-important-log-levels info
log_level --level notice
