  --name Term \
  --flags TABLE_PAT_KEY \
  --key_type ShortText \
  --default_tokenizer TokenBigram \
  --normalizer "NormalizerNFKC100(\"unify_kana\", true)"
column_create \
  --table Term \
  --name content \
  --flags COLUMN_INDEX|WITH_POSITION \
  --type Memos \
  --source content

