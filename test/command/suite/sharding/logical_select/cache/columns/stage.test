logical_select Logs \
  --shard_key timestamp \
  --columns[content].stage initial \
  --columns[content].type ShortText \
  --columns[content].flags COLUMN_SCALAR \
  --columns[content].value 'highlight_html(item)' \
  --match_columns item \
  --output_columns content \
  --query "Book"

logical_select Logs \
  --shard_key timestamp \
  --columns[content].stage filtered \
  --columns[content].type ShortText \
  --columns[content].flags COLUMN_SCALAR \
  --columns[content].value 'highlight_html(item)' \
  --match_columns item \
  --output_columns content \
  --query "Book"
