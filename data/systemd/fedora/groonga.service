[Unit]
Description=Groonga Text Searching Engine
After=network.target

[Service]
Type=forking
EnvironmentFile=-/etc/sysconfig/groonga
User=groonga
Group=groonga
ExecStart=/usr/bin/groonga -d --pid-path /var/run/groonga/groonga.pid --bind-address $ADDRESS --log-path $LOG_PATH --query-log-path $QUERY_LOG_PATH --protocol $PROTOCOL $DATABASE

[Install]
WantedBy=multi-user.target
