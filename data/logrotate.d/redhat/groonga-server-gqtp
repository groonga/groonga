/var/log/groonga/*-gqtp.log {
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    create 640 groonga groonga
    sharedscripts
    postrotate
        . /etc/sysconfig/groonga-server-gqtp
        if x"$ENABLE" = x"yes"; then
            /usr/bin/groonga -c 127.0.0.1 log_reopen > /dev/null
        fi
    endscript
}
