/var/log/groonga/httpd/*.log {
    su groonga groonga
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    sharedscripts
    postrotate
        if [ -f /var/lock/subsys/groonga-httpd ]; then
            /bin/kill -USR1 $(cat @GROONGA_HTTPD_PID_PATH@)
        fi
    endscript
}
